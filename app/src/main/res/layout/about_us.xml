<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whitemain"
    tools:context=".activities.AboutUsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT US"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/groteskreg"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        app:strokeWidth="2dp"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitemain"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="READIFY"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/groteskmed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The application combines the convenience of digital technology with a wide range of features to enhance the book-buying and reading experience for users while offering business opportunities for authors, publishers, and book retailers."
                android:textSize="16dp"
                android:fontFamily="@font/groteskreg"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:text="MEMBERS:"
        android:textColor="@color/black"
        android:fontFamily="@font/groteskreg"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="270dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:text="ANGALA, PAULIANA JHENIA MARIE M. \n BALDIVICIO, BRIAN P. \n COLOMASAG, XYRON PAUL D. \n ENOJO, CHRISTOPER L. \n SESNO, CHRISTIAN M. \n YTANG, JULIE FIL B."
        android:textColor="@color/black"
        android:fontFamily="@font/groteskreg"
        android:textSize="16dp"
        android:layout_marginBottom="130dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aboutus_to_getstarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="HOME"
        app:backgroundTint="@color/black"
        app:cornerRadius="0dp"
        android:fontFamily="@font/groteskreg"
        android:textColor="@color/whitemain"
        android:textSize="17dp"/>

</RelativeLayout>