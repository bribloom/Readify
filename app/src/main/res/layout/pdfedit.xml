<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitemain"
    tools:context=".activities.PdfeditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/shape_rec04">

        <ImageButton
            android:id="@+id/backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:src="@drawable/arrow_white" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="EDIT BOOK INFORMATION"
            android:textColor="@color/whitemain"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/groteskreg"
            android:layout_marginTop="110dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="235dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/titletil"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/titleEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:drawableStart="@drawable/pdficon"
                    android:drawablePadding="8dp"
                    android:hint="BOOK TITLE"
                    android:textColorHint="@color/black"
                    android:fontFamily="@font/groteskreg"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="textPersonName|textCapSentences"
                    android:padding="15dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titletil"
                android:id="@+id/descriptionTil"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/descriptionEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:drawableStart="@drawable/pdficon"
                    android:drawablePadding="8dp"
                    android:hint="BOOK DESCRIPTION"
                    android:gravity="top"
                    android:textColorHint="@color/black"
                    android:fontFamily="@font/groteskreg"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:inputType="textPersonName|textCapSentences"
                    android:padding="15dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/categorytvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionTil"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:fontFamily="@font/groteskreg"
                android:drawableStart="@drawable/category"
                android:drawableEnd="@drawable/arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="BOOK CATEGORY"
                android:padding="15dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updatepdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/categorytvv"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="30dp"
                app:cornerRadius="0dp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="8dp"
                android:text="UPDATE"
                android:textSize="18dp"
                android:fontFamily="@font/groteskreg"
                android:textColor="@color/whitemain"/>


        </RelativeLayout>


    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:text="Readify"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/groteskreg"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>