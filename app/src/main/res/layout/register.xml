<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitemain"
    android:orientation="vertical"
    tools:context=".activities.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_rec04">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/person_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back_arrow"
        android:background="@drawable/arrow_white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/groteskreg"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/whitemain"
        android:textSize="25sp" />



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="250dp"
        app:cardCornerRadius="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitemain"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <EditText
                android:id="@+id/namereg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:fontFamily="@font/groteskreg"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/emailreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:fontFamily="@font/groteskreg"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:padding="15dp"/>

            <EditText
                android:id="@+id/passreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:fontFamily="@font/groteskreg"
                android:textSize="18dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/cpassreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:fontFamily="@font/groteskreg"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                app:cornerRadius="0dp"
                android:backgroundTint="@color/black"
                android:text="Register"
                android:fontFamily="@font/groteskreg"
                android:textColor="@color/whitemain"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>




    <TextView
        android:id="@+id/gotologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:text="Have an account? Log in"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="@font/groteskreg"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>