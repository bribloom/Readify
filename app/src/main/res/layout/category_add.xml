<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whitemain"
    tools:context=".activities.CategoryAddActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_rec04">
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="ADD A NEW CATEGORY"
    android:textColor="@color/whitemain"
    android:layout_marginTop="20dp"
    android:textSize="20sp"
    android:fontFamily="@font/groteskreg"
    android:textStyle="bold"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/category_add"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/backarrow"/>

    </RelativeLayout>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="Category Title"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/groteskreg"
        android:textSize="18sp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/category"
        android:drawablePadding="8dp"
        android:padding="15dp"
        android:id="@+id/categoryedittext"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/categorysubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryedittext"
        android:layout_marginHorizontal="60dp"
        app:cornerRadius="0dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="SUBMIT"
        android:textSize="18dp"
        android:fontFamily="@font/groteskreg"
        android:textColor="@color/whitemain"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:text="Readify"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="@font/groteskreg"
        android:layout_marginBottom="10dp"/>





</RelativeLayout>